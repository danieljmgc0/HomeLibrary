<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HomeLibrary" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenIconBackgroundColor">@null</item>
        <!-- Your app logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Animation duration -->
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <!-- Optional: remove status bar until transition -->
        <item name="postSplashScreenTheme">@style/Theme.HomeLibrary</item>
    </style>

    <style name="Theme.MyApp.SplashV2" parent="Theme.SplashScreen">
        <!-- Fondo -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Quitamos el cÃ­rculo del icono -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>

        <!-- Usamos un drawable como fondo con el logo -->
        <item name="postSplashScreenTheme">@style/Theme.HomeLibrary</item>
    </style>
</resources>